
/* Styles communs */
QWidget {
    background-color: transparent;
    color: #F0EBE3;
    font-family: 'Century Gothic', Arial, 'Liberation Sans', sans-serif;
}

QPushButton {
    border: none;
    border-radius: 10px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #353b3c, stop:1 #232629);
    color: #F0EBE3;
    font-size: 11pt;
    min-width: 50px;
    min-height: 35px;
    padding: 5px 10px;
    letter-spacing: 1px;
}
QPushButton:hover, QPushButton:pressed, QPushButton#segment_btn:checked {
    background: #3e4446;
}

QTextEdit, QPlainTextEdit, QSpinBox, QDoubleSpinBox, QDialog, QMessageBox, QFileDialog, QInputDialog QSpinBox, QInputDialog QDoubleSpinBox {
    background: #2b2f31;
    border: 1.5px solid #444;
    border-radius: 8px;
    color: #F0EBE3;
    font-size: 8.2pt;
    padding: 6px;
}
QInputDialog QSpinBox:focus, QInputDialog QDoubleSpinBox:focus {
    background: #2b2f31;
    border: 1.5px solid #444;
    border-radius: 8px;
    color: #F0EBE3;
    font-size: 8.2pt;
    padding: 6px;
}


QComboBox{
    background: #2b2f31;
    border: 1.5px solid #444;
    border-radius: 8px;
    color: #F0EBE3;
    min-height: 27px;
    font-size: 8.7pt;
    padding: 6px;
}
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 28px;
    border-left: 1px solid #444;
    background: #353b3c;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
}

QComboBox::down-arrow {
    image: url("../objects_png/Icon/arrow_down.svg");
    width: 26px;
    height: 26px;
}

QComboBox#distance_unit{
    background: #2b2f31;
    border: 1.5px solid #444;
    border-radius: 8px;
    color: #F0EBE3;
    min-height: 27px;
    min-width: 70px;
    font-size: 8.7pt;
    padding: 6px;
}
QTextEdit:focus, QPlainTextEdit:focus, QSpinBox:focus, QDoubleSpinBox:focus {
    border: 2px solid #7700ff;
    background: #353b3c;
}
QLineEdit {
    font-size: 16px;
    padding: 10px 10px 10px 5px;
    border: none;
    border-bottom: 2px solid #515151;
    background: transparent;
    color: #F0EBE3;
}
QLineEdit:focus {
    border-bottom: 2px solid #7700ff;
}
QLineEdit[placeholderText] {
    color: #f5f5f5;
}
QGroupBox {
    border: 1.5px solid #444;
    border-radius: 12px;
    margin-top: 8px;
    background: #232629;
    padding-top: 10px;
    font-size: 8.2pt;
}

/* Titres des GroupBox */
QLabel#telescope_caract_title,
QLabel#barlow_reducer_title,
QLabel#camera_caract_title,
QLabel#object_distance_title,
QLabel#astro_obj_skyfield_title {
    background: transparent;
    font-size: 11pt;
    font-weight: 400;
    font-style: italic;
    color: #F0EBE3;
    margin-bottom: 8px;
}
QLabel {
    color: #F0EBE3;
    font-size: 8.2pt;
}
QLabel#real_length_label,
QLabel#length_label {
    font-size: 11pt;
    font-weight: bold;
}
QLabel#real_length_label {
    margin-bottom: 12px;
}

QCheckBox, QRadioButton {
    padding: 3px;
    color: #F0EBE3;
    font-size: 8.2pt;
}
QCheckBox::indicator, QRadioButton::indicator {
    width: 20px;
    height: 20px;
    border-radius: 10px;
    border: 1.5px solid #444;
    background: #232629;
}
QCheckBox::indicator:checked, QRadioButton::indicator:checked {
    background: #7700ff;
    border: 1.5px solid #7700ff;
}

QComboBox QAbstractItemView {
    background: #232629;
    border: 1.5px solid #444;
    selection-background-color: #353b3c;
    border-radius: 8px;
    color: #F0EBE3;
}

QTabWidget::pane {
    border: 1.5px solid #444;
    border-radius: 12px;
    background: #232629;
}
QTabBar::tab {
    background: #353b3c;
    color: #F0EBE3;
    border: 1.5px solid #444;
    border-bottom: none;
    border-radius: 10px 10px 0 0;
    padding: 8px 18px;
    margin-right: 2px;
}
QTabBar::tab:selected {
    background: #232629;
    color: #7700ff;
    font-weight: 600;
}

/* Exceptions et cas particuliers */
QComboBox#distance_unit {
    max-width: 40px;
}
QComboBox#distance_combo {
    max-width: 130px;
}
QDateEdit {
    background: #2b2f31;
    border: 1.5px solid #444;
    border-radius: 8px;
    color: #F0EBE3;
    font-size: 8.2pt;
    min-height: 40px;
    max-width: 120px;
}
QWidget#mainLayout {
    border-radius: 24px;
    border: none;
    background-color: #232629;
}
QWidget#FramelessImageViewer {
    border-radius: 14px;
    border: 1.5px solid #353b3c;
    background-color: #232629;
}
QWidget#CustomTitleBar {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #232629, stop:1 #181a1b); /**/
    border-radius: 7px;
    border-top: 2.5px solid #353b3c;
    border-left: 1.5px solid #353b3c;
    border-right: 1.5px solid #353b3c;
    border-bottom: 3px solid #7700ff;
}
QSplitter#mainSplitter {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #232629, stop:1 #181a1b);
    border-top: 3px solid #7700ff;
    border-left: 3px solid #7700ff;
    border-right: 3px solid #7700ff;
    border-bottom: 3px solid #7700ff;
    border-radius: 15px;
}
QWidget#titleBarBtnWidget {
    background: transparent; /*regit le layout des boutons de droites*/
}
QWidget#CustomTitleBar QLabel#title_label {
    font-size: 15pt;
    font-weight: 700;
    color: #F0EBE3;
    letter-spacing: 1px;
}
QWidget#CustomTitleBar QComboBox {
    font-size: 11pt;
    border-radius: 8px;
    min-width: 120px;
    max-width: 160px;
    background: #232629;
    color: #F0EBE3;
    border: 1.5px solid #444;
}
QWidget#CustomTitleBar QLabel#icon_label {
    margin-right: 8px;
}
QWidget#CustomTitleBar QLabel {
    color: #F0EBE3;
    font-size: 13pt;
    font-weight: 600;
    font-family: 'Serena', 'Century Gothic', Arial, 'Liberation Sans', sans-serif, 'Segoe UI Variable';
}

QPushButton#open_btn, QPushButton#remove_image_btn {
    min-width: 160px;
    min-height: 35px;
    font-size: 11pt;
    font-weight: 600;
}
QPushButton#toggleLeftPanelButton {
    min-width: 50px;
    min-height: 35px;
    font-size: 11pt;
    font-weight: 600;
}

QPushButton#close_btn, QPushButton#min_btn, QPushButton#max_btn {
    font-size: 12pt;
    padding: 0px 12px;
}
QPushButton#min_btn:hover, QPushButton#max_btn:hover {
    background: #3e4446;
    color: #fff;
}
QPushButton#close_btn:hover, QPushButton#remove_distance_btn:hover, QPushButton#remove_image_btn:hover {
    background: #ff0000;
    color: #fff;
}
QWidget#ImageArea {
    background-color: #232629;
    border: none;
    border-radius:10px;
}
QScrollArea#leftScroll, QWidget#rightPanel, QVBoxLayout#rightLayout, QLabel#image_label {
    background-color: #232629;
    border: none;
    border-radius:15px;
}
QWidget#leftPanel{
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 #3e4446,
        stop:0.5 #232629,
        stop:1 #3e4446
    );
}

QLabel#author_label {
    background: #232629; 
    color: #F0EBE3; 
    padding: 4px 12px; 
    border-radius: 8px; 
    font-size: 12pt; 
    font-family: 'Century Gothic', Arial, 'Liberation Sans', sans-serif;
}

/* ScrollBar Style */
QScrollBar:vertical {
    background: #232629;
    width: 16px;
    margin: 2px 0 2px 0;
    border-radius: 4px;
}
QScrollBar::handle:vertical {
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 #3e4446,
        stop:0.5 #7700ff,
        stop:1 #3e4446
    );
    min-height: 24px;
    border-radius: 4px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: #353b3c;
    height: 0px;
    border: none;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}
   