/* Styles communs */
QWidget {
    background-color: transparent;
    color: #F0EBE3;
    font-family: 'Century Gothic', Arial, 'Liberation Sans', sans-serif;
}
QPushButton {
    border: none;
    border-radius: 10px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #353b3c, stop:1 #232629);
    color: #F0EBE3;
    font-size: 11pt;
    min-width: 50px;
    min-height: 35px;
    padding: 5px 10px;
    letter-spacing: 1px;
}
QPushButton:hover, QPushButton:pressed, QPushButton#segment_btn:checked, QPushButton#segment_btn_custom:checked {
    background: #3e4446;
}
QTextEdit, QPlainTextEdit, QSpinBox, QDoubleSpinBox, QDialog, QMessageBox, QFileDialog, QInputDialog QSpinBox, QInputDialog QDoubleSpinBox {
    background: #2b2f31;
    border: 1.5px solid #444;
    border-radius: 8px;
    color: #F0EBE3;
    font-size: 8.2pt;
    padding: 6px;
}
QInputDialog QSpinBox:focus, QInputDialog QDoubleSpinBox:focus {
    background: #2b2f31;
    border: 1.5px solid #444;
    border-radius: 8px;
    color: #F0EBE3;
    font-size: 8.2pt;
    padding: 6px;
}
QComboBox{
    background: #2b2f31;
    border: 1.5px solid #444;
    border-radius: 8px;
    color: #F0EBE3;
    min-height: 27px;
    font-size: 8.7pt;
    padding: 6px;
}
